@model Model.UserInfo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>
<body>
    <div> 
        @using (Html.BeginForm("Add", "UserInfo", FormMethod.Post))
        {
            @Html.TextBoxFor(u=>u.CustomerID)
            <br />
            @Html.TextBoxFor(u=>u.CustomerPWD)
            <br />
            @Html.TextBoxFor(u => u.CustomerType)
            <br />
            @Html.TextBoxFor(u => u.Score)
            <br />
            @Html.DropDownList("StatesId",(IEnumerable<SelectListItem>)ViewBag.TypeList)
            <br />
            <input type="submit" value="添加" />
        }
    </div>
</body>
</html>
